<% layout('layout') -%>
<section style="margin-top:2em;">
    <a href="/characters" style="color:var(--primary);">&larr; Back to Characters</a>
    <div class="card" style="margin-top:2em;">
        <h2 style="font-size:1.5rem; font-weight:600; color:var(--primary); margin-bottom:1em;"><%= character.name %></h2>
        <img src="<%= character.image %>" alt="<%= character.name %>" style="width:220px; height:220px; object-fit:cover; border-radius:var(--radius); margin-bottom:1em;">
        <p><strong>Biography:</strong> <%= character.description %></p>
        <p><strong>Key Episodes:</strong> <%= character.keyEpisodes.join(', ') %></p>
        <div style="margin-top:2em; display:flex; gap:1em;">
            <a href="/characters/edit/<%= character._id %>" class="btn" style="background:var(--accent);">Edit</a>
            <form action="/characters/delete/<%= character._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn" style="background:#e11d48;">Delete</button>
            </form>
        </div>
    </div>
</section>
